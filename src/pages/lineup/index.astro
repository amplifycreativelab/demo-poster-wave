---
import BaseLayout from "../../layouts/BaseLayout.astro";

import LineupGrid from "../../components/LineupGrid.astro";
import { artists } from "../../data/artists";
import { Image } from "astro:assets";
import crowdImage from "../../assets/crowd.webp";
---

<BaseLayout title="Lineup - PosterWave">
    <div class="container page-content">
        <h1 class="page-title">The Lineup</h1>
        <div class="lineup-hero">
            <Image src={crowdImage} alt="Festival Crowd" class="hero-image" />
        </div>
        <LineupGrid artists={artists} />
    </div>
</BaseLayout>

<style>
    .page-content {
        padding: var(--space-8) var(--space-4);
    }

    .page-title {
        font-size: 5rem;
        text-align: center;
        color: var(--color-ink-a);
        margin-bottom: var(--space-8);
    }

    @media (max-width: 768px) {
        .page-title {
            font-size: 3rem;
        }
    @media (max-width: 768px) {
        .page-title {
            font-size: 3rem;
        }
    }

    .lineup-hero {
        margin-bottom: var(--space-8);
        border: 2px solid var(--color-ink-a);
        transform: rotate(-1deg);
        box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        height: 300px;
    }

    .hero-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(100%) contrast(1.2) brightness(1.1);
        mix-blend-mode: multiply;
    }
</style>
